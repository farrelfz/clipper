{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ExportPlan",
  "type": "object",
  "properties": {
    "platforms": {
      "type": "object",
      "properties": {
        "tiktok": {"$ref": "#/$defs/platformClips"},
        "shorts": {"$ref": "#/$defs/platformClips"},
        "reels": {"$ref": "#/$defs/platformClips"}
      },
      "required": ["tiktok", "shorts", "reels"]
    }
  },
  "required": ["platforms"],
  "$defs": {
    "platformClips": {
      "type": "array",
      "items": {"$ref": "#/$defs/clip"}
    },
    "clip": {
      "type": "object",
      "properties": {
        "start": {"type": "number"},
        "end": {"type": "number"},
        "text": {"type": "string"},
        "score": {"type": "number"},
        "features": {
          "type": "object",
          "additionalProperties": {"type": "number"}
        }
      },
      "required": ["start", "end", "text", "score", "features"]
    }
  }
}
